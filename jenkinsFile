node {
    def WORKSPACE = "/var/lib/jenkins/workspace/kafka-producer"
    def buildNumber = env.BUILD_NUMBER ?: '0'  // Jenkins build number
    def dockerImageTag = "rinkuls/kafka-producer:${buildNumber}"  // Docker image tag
    def helmChartName = "kafka-producer-chart"
    def releaseName = "kafka-producer-release"

    try {
        // Stage 1: Clone Repository
        stage('Clone Repository') {
            git url: 'https://github.com/rinkuls/kafka-producer.git',
                credentialsId: 'springdeploy-user',
                branch: 'main'
        }

        // Stage 2: Build Application
        stage('Build Application') {
            echo "Building the Kafka Producer Java Application with Maven"
            sh "mvn clean install"
        }

        // Stage 3: Build Docker Image
        stage('Build Docker Image') {
            echo "Building Docker image: ${dockerImageTag}"
            def dockerImage = docker.build(dockerImageTag)
            echo "Docker Image built successfully: ${dockerImageTag}"
        }

        // Stage 4: Push Docker Image to Docker Hub
        stage('Push Docker Image to Docker Hub') {
            withCredentials([usernamePassword(credentialsId: 'dockerhub-credentials-id', passwordVariable: 'DOCKER_HUB_PASSWORD', usernameVariable: 'DOCKER_HUB_USERNAME')]) {
                echo "Logging into Docker Hub"
                sh '''
                    docker login -u $DOCKER_HUB_USERNAME -p $DOCKER_HUB_PASSWORD
                '''
                echo "Pushing Docker image to Docker Hub"
                sh "docker push ${dockerImageTag}"
            }
        }

        // Stage 5: Deploy to Minikube with Helm
        stage('Deploy to Minikube with Helm') {
            echo "Deploying Kafka Producer application to Minikube using Helm"
            sh 'kubectl config use-context minikube'

            // Helm deployment with the new Docker image
            sh "helm upgrade --install ${releaseName} ${helmChartName} --set image.tag=${buildNumber} --namespace default"

            // Verify the deployment
            sh "helm status ${releaseName}"
            sh 'kubectl get pods --namespace default'
        }


    } catch (Exception e) {
        echo "Error occurred: ${e.message}"
        currentBuild.result = 'FAILED'
        notifyBuild('FAILED')
        throw e
    } finally {
        echo "Cleaning up resources"
    }
}

// Email notification function
def notifyBuild(String buildStatus = 'STARTED') {
    buildStatus = buildStatus ?: 'SUCCESSFUL'
    def now = new Date()
    def subject_email = "Kafka Producer Deployment - Status: ${buildStatus}"
    def details = """<p>${buildStatus} JOB</p>
    <p>Job: ${env.JOB_NAME} - Build Number: [${env.BUILD_NUMBER}] - Time: ${now}</p>
    <p>Check console output at "<a href="${env.BUILD_URL}">${env.JOB_NAME}</a>"</p>"""

    emailext(
        to: "rinkulsharma123@gmail.com",
        subject: subject_email,
        body: details
    )
}
